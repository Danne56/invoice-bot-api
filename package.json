    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "mysql2": "^3.14.2",
    "nanoid": "^5.1.5",
    "node-cron": "^4.2.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1"

  },
